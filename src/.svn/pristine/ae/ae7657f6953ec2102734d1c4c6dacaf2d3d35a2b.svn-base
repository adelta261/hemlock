	public static void mainMenu(boolean playerCreated)
	{
		Dialogue.bannerText();
		function:
		while (true)
		{
			Dialogue.mainMenuText();
			
			String input = in.nextLine().trim().toLowerCase();
			switch (input)
			{
			case "n":
			case "new":
				if (!playerCreated)
				{
					Game.characterCreation(playerCreated);
				}
				break function;
			case "l":
			case "load":
				// TODO: LOADING
				break function;
			case "q":
			case "quit":
				System.exit(0);
				break function;
			case "cred":
			case "credits":
				Dialogue.credits();
				break;
			case "c":
			case "cont":
			case "continue":
				break function;
			}
		}
	}
	
	

